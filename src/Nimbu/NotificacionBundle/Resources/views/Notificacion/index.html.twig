{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Notificacion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mensaje</th>
                <th>Fechahora</th>
                <th>Validez</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('notificacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.mensaje }}</td>
                <td>{% if entity.fechaHora %}{{ entity.fechaHora|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.validez }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('notificacion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('notificacion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('notificacion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
